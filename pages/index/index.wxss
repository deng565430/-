/**index.wxss**/
.content{
  padding-top: 15rpx;
  background: #f9f9f9;
  border-bottom: 1rpx solid #e8e8e8;
  position: relative;
  height: 225rpx;
}
.content-img{
  display: inline-block;
}
.content-text{
  display: inline-block;
  padding-left: 30rpx;
  font-size: 30rpx;
  line-height: 50rpx;
   vertical-align: top;
}
.content-text view:nth-child(1){
 font-size: 38rpx;
}
.content-text view:nth-child(2){
  color:#666;
 
}
.content-text view:nth-child(3){
  color:#999;
}
.content-text view:nth-child(4){
  color:#979797;
}
.content-grade{
  color:#ff9d09;
  position: absolute;
  right: 20rpx;
  top:20rpx;
  font-weight: both;
  font-size: 40rpx;
}
.content-grade:last-child{
  top:170rpx;
}
.content-grade button{
  width: 115rpx;
  height:60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  background: #3097ed;
}
