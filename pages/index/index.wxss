/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #4d4d4d;
  color:white;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.content{
  padding-top: 15rpx;
  background: #393939;
  color: white;
  border-bottom: 7rpx solid #4d4d4d;
  position: relative;
  height: 225rpx;
}
.content-img{
  display: inline-block;
}
.content-text{
  display: inline-block;
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #ccc;
  line-height: 70rpx;
   vertical-align: top;
}
.content-grade{
  color:red;
  position: absolute;
  right: 20rpx;
  top:20rpx;
}


